{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "@nexo/cli-core": ["../cli-core/src/index.ts"]
    },
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}

